<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/list_memo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        fab:menu_fab_size="mini"
        fab:menu_colorNormal="@color/fab_color_normal"
        fab:menu_colorPressed="@color/fab_color_press"
        fab:menu_colorRipple="@color/fab_color_ripple">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fab_edit"
            style="@style/menu_buttons_small" />
    </com.github.clans.fab.FloatingActionMenu>


    <Button
        android:id="@+id/logout"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:text="注销"/>

</FrameLayout>
